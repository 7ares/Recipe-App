<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/ribeye</item>
        <item name="android:textColor">#FFDA44</item>


    </style>


    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <!--***********************-->
    <!-- ingredient text style -->
    <!--***********************-->

    <style name="IngredientText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/alegreya_italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--**********************-->
    <!-- direction text style -->
    <!--**********************-->
    <style name="DirectionHeadLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/alegreya_italic</item>
    </style>

    <style name="DirectionBodyText" parent="DirectionHeadLine">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--******************************-->
    <!-- Ingredient Widget Text Style -->
    <!--******************************-->
    <style name="WidgetTextStyle" parent="DirectionHeadLine">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
